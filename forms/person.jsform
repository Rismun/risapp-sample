{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "RisApp Example JSON Schema",
  "description": "This schema contains Person property",
  "type": "object",
  "required": [
    "first_name",
    "last_name",
    "birth_date"
  ],
  "properties": {
    "birth_date": {
      "type": "string",
      "format":"date",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
    },
    "first_name": {
      "type": "string"
    },
    "last_name": {
      "type": "string"
    }
  }
}
